<h3><%= current_user.name %>さんの情報</h3>
<%= form_for @userinfo, :url => {:action => 'update'} do |f| %>
<%= f.label :name, "名前" %><%= f.text_field :name %>
<%= f.label :number, "学生番号" %><%= f.text_field :number %>
<%= f.label :faculty, "学部" %><%= f.text_field :faculty %>
<%= f.label :department, "学科" %><%= f.text_field :department %>
<br>
<%= f.submit "変更",{:class => "btn btn-primary"} %>
<% end %>