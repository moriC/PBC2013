<style type="text/css">
	body {
		padding-top: 40px;
		padding-bottom: 40px;
		background-color: #f5f5f5;
	}

	.form-signin {
		max-width: 300px;
		padding: 19px 29px 29px;
		margin: 0 auto 20px;
		background-color: #fff;
		border: 1px solid #e5e5e5;
		-webkit-border-radius: 5px;
		   -moz-border-radius: 5px;
		        border-radius: 5px;
		-webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
		   -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
		        box-shadow: 0 1px 2px rgba(0,0,0,.05);
	}
	.form-signin .form-signin-heading,
	.form-signin .checkbox {
		margin-bottom: 10px;
	}
	.form-signin input[type="text"],
	.form-signin input[type="password"] {
		font-size: 16px;
		height: auto;
		margin-bottom: 0px;
		padding: 7px 9px;
	}
  #submit{
  	margin-top: 20px;
  }
</style>
<div class="container">
	<div class="form-signin">
	  <h3>PBC2013 ユーザ登録</h3>
	  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>
		  <div><%= f.label :name, 'お名前'  %><%= f.text_field :name %></div>
		  <div><%= f.label :number, '学生番号(例：bXYYZZZ)'  %><%= f.text_field :number %></div>
		  <div><%= f.label :faculty, '学部(例：情報学部)'  %><%= f.text_field :faculty %></div>
		  <div><%= f.label :department, '学科(例：知的情報システム学科)'  %><%= f.text_field :department %></div>
		  <div><%= f.label :year, '学年'  %><%= f.text_field :year %></div>
		  <div><%= f.label :email, 'メールアドレス(連絡がつくアドレス)'  %><%= f.email_field :email, :autofocus => true %></div>
		  <div><%= f.label :password, 'パスワード'  %><%= f.password_field :password %></div>
		  <div><%= f.label :password_confirmation, 'パスワード(再確認)'  %><%= f.password_field :password_confirmation %></div>
		  <div id="submit"><%= f.submit "登録" %></div>
	  <% end %>
	</div>
</div> <!-- /container -->


